
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crud App</h2>

<div ng-controller="productController as pc">
    <div class="row">
        <div class="col-md-4">
            <form name="Product Form" class="form-group">
                <span class="row"><strong>Id </strong><input type="number" ng-model="pc.model.Id" /></span>
                <span class="row"><strong>Brand </strong><input ng-model="pc.model.Brand" /></span>
                <span class="row"><strong>Product Name </strong><input type="text" ng-model="pc.model.productName" /></span>
                <span class="row"><strong>Price </strong><input ng-model="pc.model.price" /></span>
                <span class="row"><strong>StoreId </strong><input type="number" ng-model="pc.model.StoreId" /></span>
                <span class="row"><strong>Size </strong> <input type="number" ng-model="pc.model.size" /></span>
                <div class="row">
                    <button style="float:left" type="button" ng-click="pc.insertProduct(pc.model)" >Create</button>
                    <button  style="float:left" type="button" ng-click="pc.productUpdate(pc.model)">Update</button>
                    <button  style="float:left" type="button" ng-click="pc.deleteProduct(pc.model.Id)">Delete</button>

                </div>


            </form>
        </div>
        <div class="col-md-8">

            <input ng-model="pc.keyword" /><button type="button" ng-click="pc.getProductByKeyword(pc.keyword)">Read</button>
       
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Brand</th>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Size</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="product in pc.productArray">
                            <td>{{product.Id}}</td>
                            <td>{{product.Brand}}</td>
                            <td>{{product.ProductName}}</td>
                            <td>${{product.Price}}</td>
                            <td>{{product.Size}} gal. </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
       
    </div>
    
    <h2>Scraper Section</h2>
    <div class="row">
        <button style="float:left" type="button" ng-click="pc.getByWebScrape()">Scrape</button>
    </div>
 
    <div class="row" ng-repeat="link in pc.scrapeArray">
        <span ng-bind-html="link"></span>

    </div>

</div>

@section scripts{
    <script src="/Scripts/Site/Service/ProductService.js"></script>
    <script src="/Scripts/Site/Controller/ProductController.js"></script>

}